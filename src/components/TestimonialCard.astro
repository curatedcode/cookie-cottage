---
import { StarIcon } from "./Icons";

interface Props {
	name: string;
	quote: string;
	rating: number;
	date: string;
}

const { name, quote, rating, date } = Astro.props;
---

<div class="bg-white border border-gray-3 p-6 rounded-lg shadow-md md:h-full">
	<div class="flex mb-3">
		{
			Array.from({ length: 5 }).map((_, i) => (
				<StarIcon
					class={
						i < rating
							? "text-yellow-400 fill-yellow-400 w-5 h-5"
							: "text-gray-5 w-5 h-5"
					}
					aria-hidden="true"
				/>
			))
		}
	</div>

	<div class="flex flex-col pb-6 h-full justify-between">
		<p class="italic">"{quote}"</p>
		<div class="flex justify-between items-center">
			<p class="font-medium text-custom-brown">{name}</p>
			<p class="text-sm text-gray-10">{date}</p>
		</div>
	</div>
</div>
