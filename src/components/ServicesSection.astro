---
import { CalendarDaysIcon, GiftIcon, PenHeadIcon } from "./Icons";
const services = [
	{
		icon: "gift",
		title: "Custom Orders",
		description:
			"Personalized treats for birthdays, weddings, and special occasions.",
		link: "/contact?ref=custom-orders",
	},
	{
		icon: "pen",
		title: "Drop-in Decorating",
		description:
			"Learn to decorate cookies and cupcakes with our experienced bakers.",
		link: "/contact?ref=decorating",
	},
	{
		icon: "calendar",
		title: "Party Bookings",
		description: "Host your next event or celebration at The Cookie Cottage.",
		link: "/contact?ref=party",
	},
] as const;
---

<section class="py-16 px-4 bg-accent-2">
	<div class="container mx-auto">
		<h2
			class="text-4xl font-handwritten font-bold text-custom-brown mb-6 md:text-5xl text-center"
		>
			Our Services
		</h2>
		<div class="w-24 h-1 bg-custom-brown mx-auto mb-12 rounded-full"></div>

		<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
			{
				services.map((service) => (
					<div class="bg-white p-8 border border-gray-3 rounded-lg shadow-md text-center transition-transform hover:scale-105 duration-300">
						{service.icon === "gift" && (
							<div class="flex justify-center">
								<GiftIcon
									class="w-12 h-12 text-custom-brown mb-4"
									aria-hidden="true"
								/>
							</div>
						)}
						{service.icon === "pen" && (
							<div class="flex justify-center">
								<PenHeadIcon
									class="w-12 h-12 text-custom-brown mb-4"
									aria-hidden="true"
								/>
							</div>
						)}
						{service.icon === "calendar" && (
							<div class="flex justify-center">
								<CalendarDaysIcon
									class="w-12 h-12 text-custom-brown mb-4"
									aria-hidden="true"
								/>
							</div>
						)}
						<h3 class="text-2xl font-handwritten font-bold text-custom-brown mb-3">
							{service.title}
						</h3>
						<p class="mb-5">{service.description}</p>
						<a
							class="inline-block text-custom-brown font-medium hover:underline"
							href={service.link}
						>
							Learn More
						</a>
					</div>
				))
			}
		</div>
	</div>
</section>
