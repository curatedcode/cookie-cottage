---
import { getButtonClass } from "../components/Button/getButtonClass";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Offline - The Cookie Cottage">
	<div class="flex items-center justify-center">
		<div class="text-center pt-32">
			<h1 class="text-5xl font-handwritten text-custom-brown font-bold mb-4">
				No internet
			</h1>
			<p class="text-xl text-gray-600 mb-4">
				Uh-Oh! You don't have access to the internet
			</p>
			<a href="/" class={getButtonClass({ variant: "solid" })}>
				Return to Home
			</a>
		</div>
	</div>
</Layout>
